# ============================================
# .env.example
# ============================================

# ====================================
# Base de Datos
# ====================================
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/api_correos

# ====================================
# Servidor
# ====================================
PORT=3000
NODE_ENV=development

# ====================================
# CORS
# ====================================
CORS_ORIGIN=*

# ====================================
# JWT - Autenticación
# ====================================
# Clave secreta para firmar tokens JWT (mínimo 32 caracteres en producción)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-with-minimum-32-characters

# ====================================
# GitHub OAuth
# ====================================
# Obtener en: https://github.com/settings/developers
# 1. Ve a Settings > Developer settings > OAuth Apps
# 2. Crea una nueva OAuth App
# 3. Copia el Client ID y Client Secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ====================================
# Frontend URL
# ====================================
# URL del frontend para redirigir después del login con GitHub
FRONTEND_URL=http://localhost:3001

# ====================================
# Email SMTP
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
MAIL_FROM="Mi Empresa <noreply@miempresa.com>"
