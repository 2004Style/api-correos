generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Roles del sistema (Admin, Cliente)
model Role {
  id        String   @id @default(uuid()) @db.Char(36)
  name      String   @unique @db.VarChar(50) // 'admin', 'cliente'
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users User[]

  @@map("roles")
}

// Usuarios del sistema
model User {
  id         String   @id @default(uuid()) @db.Char(36)
  username   String   @unique @db.VarChar(50)
  email      String?  @unique @db.VarChar(100)
  telefono   String?  @db.VarChar(15)
  rolId      String   @map("rol_id") @db.Char(36)
  auth2Id    String?  @map("auth2_id") @db.VarChar(100)
  verificado Boolean  @default(false)
  contrasena String?  @db.VarChar(255)
  activo     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relaciones
  role         Role          @relation(fields: [rolId], references: [id])
  applications Application[]

  @@index([email])
  @@index([rolId])
  @@map("usuarios")
}

// Aplicaciones (cada usuario puede tener múltiples apps)
model Application {
  id     String @id @default(uuid()) @db.Char(36)
  name   String @db.VarChar(100)
  userId String @map("user_id") @db.Char(36)

  // Credenciales
  clientId  String @unique @map("client_id") @db.VarChar(700)
  secretKey String @map("secret_key") @db.VarChar(700)

  // Estado
  activo    Boolean @default(true)
  suspended Boolean @default(false)

  // Límites
  rateLimit  Int @default(1000) @map("rate_limit") // emails por hora
  dailyLimit Int @default(10000) @map("daily_limit") // emails por día

  // Timestamps
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  lastUsedAt DateTime? @map("last_used_at")

  // Relaciones
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([clientId])
  @@map("aplicaciones")
}
